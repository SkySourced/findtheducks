<!DOCTYPE html>
<html lang="en">
<head>
<%- include("./templates/head") %>
</head>
<body>
    <%- include("./templates/header", {authorised, permissions}) %>
    <div class="content">
        <h1>Scoreboard</h1>
        <table>
            <tr>
                <th class="scoreboard-username">Username</th>
                <th class="scoreboard-stat">Finds</th>
                <th class="scoreboard-stat">Firsts</th>
            </tr>
            <% scoreboard.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.finds %></td>
                    <td><%= user.first_finds %></td>
                </tr>
            <% }); %>
        </table>
    </div>
    <%- include("./templates/footer", {duckFact}) %>
</body>
</html>